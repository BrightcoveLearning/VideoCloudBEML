<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Runtime SYSTEM "http://admin.brightcove.com/dtds/beml_rt.dtd">
<Runtime>
  <Theme name="Deluxe" style="Light"/>
  <Layout width="955" height="550" padding="3">
    <HBox>
      <VBox width="480" height="512">
        <Image width="480" height="40"/>
        <VideoPlayer id="videoPlayer" width="480" height="412"/>
        <TitleLabel text="My Name" height="40" size="24"/>
        <Label text="My Short Description" height="20" size="11"/>
      </VBox>
      <VBox width="438" height="430">
        <TabBar id="playlistTabs" height="22"/>
        <TileList id="videoList" columnWidth="120" rowHeight="125" numColumns="3" numRows="3">
          <ListItem width="120" padding="3" boxType="vbox">
            <ThumbnailButton width="114" height="85"/>
            <TitleLabel width="114" height="85" text="Label" size="11" truncate="true"/>
          </ListItem>
        </TileList>
      </VBox>
    </HBox>
  </Layout>
</Runtime>
